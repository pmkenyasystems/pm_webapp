// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("admin") // super_admin, admin
  modules   String? // JSON array of modules: ["news", "events", "elections", "positions", "members", "volunteers", "donations"]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  articles Article[] @relation("ArticleAuthor")
}

model Member {
  id                   String    @id @default(cuid())
  ippmsId              String    @unique
  membershipNo         String?   @unique // Membership_No from IPPMS
  firstName            String
  lastName             String
  email                String?
  phone                String?
  idNumber             String    @unique
  dateOfBirth          DateTime?
  gender               String?
  religion             String?
  ethnicity            String?
  address              String?
  county               String?
  constituency         String?
  ward                 String?
  youth                Boolean?  @default(false) // Youth (yes/no)
  pwd                  Boolean?  @default(false) // PWD (yes/no)
  membershipDate       DateTime  @default(now())
  status               String    @default("active") // active, inactive, suspended
  password             String? // Hashed password for member login
  membershipCategoryId String? // Reference to membership category
  profileCreatedAt     DateTime  @default(now())
  ippmsDataSyncedAt    DateTime? // Date/time when IPPMS data was last synced/updated
  updatedAt            DateTime  @updatedAt

  membershipCategory MembershipCategory?      @relation(fields: [membershipCategoryId], references: [id])
  volunteers         Volunteer[]
  subscriptions      MembershipSubscription[]

  @@map("member")
}

model MembershipCategory {
  id        String   @id @default(cuid())
  title     String   @unique
  fee       Float
  timeline  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  members Member[]

  @@map("membership_category")
}

model MembershipSubscription {
  id            String   @id @default(cuid())
  idNumber      String // ID_Number of the member
  amount        Float
  currency      String   @default("KES")
  paymentMethod String // mpesa, card, paypal
  transactionId String? // Transaction ID from payment provider
  status        String   @default("pending") // pending, completed, failed
  periodStart   DateTime // Start date of the 5-year subscription period
  periodEnd     DateTime // End date of the 5-year subscription period (5 years from start)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  member Member @relation(fields: [idNumber], references: [idNumber])

  @@index([idNumber])
}

model Volunteer {
  id           String   @id @default(cuid())
  firstName    String
  lastName     String
  email        String
  phone        String
  idNumber     String?
  address      String?
  county       String?
  skills       String? // JSON string of skills
  availability String? // full-time, part-time, weekends, etc.
  motivation   String? // Why they want to volunteer
  isMember     Boolean  @default(false)
  memberId     String?
  status       String   @default("pending") // pending, approved, rejected
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  member Member? @relation(fields: [memberId], references: [id])
}

model Donation {
  id            String   @id @default(cuid())
  amount        Float
  currency      String   @default("KES")
  paymentMethod String // mpesa, card
  transactionId String? // M-Pesa transaction ID or Stripe payment intent ID
  donorName     String?
  donorEmail    String?
  donorPhone    String?
  status        String   @default("pending") // pending, completed, failed
  metadata      String? // JSON string for additional data
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Article {
  id          String    @id @default(cuid())
  title       String
  slug        String    @unique
  content     String // Rich text content
  excerpt     String?
  imageUrl    String?
  authorId    String
  published   Boolean   @default(false)
  publishedAt DateTime?
  views       Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  author User @relation("ArticleAuthor", fields: [authorId], references: [id])
}

model Event {
  id           String    @id @default(cuid())
  title        String
  description  String
  imageUrl     String?
  location     String
  startDate    DateTime
  endDate      DateTime?
  isPublic     Boolean   @default(true)
  maxAttendees Int?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model County {
  id         String   @id @default(cuid())
  countyCode Int      @unique
  countyName String   @unique
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  constituencies Constituency[]
  aspirants      Aspirant[]
}

model Constituency {
  id               String   @id @default(cuid())
  constituencyCode Int      @unique
  constituencyName String
  countyCode       Int
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  county    County     @relation(fields: [countyCode], references: [countyCode])
  wards     Ward[]
  aspirants Aspirant[]

  @@unique([constituencyCode, countyCode])
}

model Ward {
  id               String   @id @default(cuid())
  wardCode         Int      @unique
  wardName         String
  constituencyCode Int
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  constituency Constituency @relation(fields: [constituencyCode], references: [constituencyCode])
  aspirants    Aspirant[]

  @@unique([wardCode, constituencyCode])
}

model Position {
  id            Int      @id @default(autoincrement())
  positionTitle String
  positionLevel String // e.g., "National", "County", "Constituency", "Ward"
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  aspirants Aspirant[]
}

model Election {
  id           String   @id @default(cuid())
  title        String
  description  String?
  electionDate DateTime
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  aspirants Aspirant[]
}

model Aspirant {
  id               String   @id @default(cuid())
  idNumber         String // ID_Number of the logged-in member
  electionId       String
  positionId       Int
  country          String   @default("Kenya")
  countyCode       Int?
  constituencyCode Int?
  wardCode         Int?
  status           String   @default("pending") // pending, approved, rejected
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  election     Election      @relation(fields: [electionId], references: [id], onDelete: Cascade)
  position     Position      @relation(fields: [positionId], references: [id])
  county       County?       @relation(fields: [countyCode], references: [countyCode])
  constituency Constituency? @relation(fields: [constituencyCode], references: [constituencyCode])
  ward         Ward?         @relation(fields: [wardCode], references: [wardCode])

  @@unique([idNumber, electionId, positionId])
}
